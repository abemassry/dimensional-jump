function _init()
	block_size=10
	z=6
 x0=40
 x1=x0+block_size
 y0=40
 y1=y0+block_size
end

function _update60()
	if(btn(0)) then
		x0-=1
	end
	if(btn(1)) then
		x0+=1
	end
	
	if(btn(2)) then
		y0-=1
	end
	if(btn(3)) then
		y0+=1
	end
	if(btn(4)) then
		z+=1
	end
	if(btn(5)) then
	 z-=1
	end

	
	
end

function _draw()
	cls()
	rect(x0+z,y0+z,x1+z,y1+z,12)
	line(x0,y0,x0+z,y0+z,14)
	line(x1,y0,x1+z,y0+z,14)
	line(x0,y1,x0+z,y1+z,14)
	line(x1,y1,x1+z,y1+z,14)
	rect(x0,y0,x1,y1,12)
end
